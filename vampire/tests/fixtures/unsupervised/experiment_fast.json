{
    "dataset_reader": {
      "lazy": false,
      "type": "vampire_reader"
  },
  "train_data_path": "vampire/tests/fixtures/imdb/train.npz",
  "validation_data_path": "vampire/tests/fixtures/imdb/test.npz",
  "vocabulary":{
    "type": "extended_vocabulary",
    "directory_path": "vampire/tests/fixtures/imdb/vocabulary/",
  },
    "model": {
      "type": "vampire",
      "update_background_freq": true,
      "kl_weight_annealing": "constant",
      "reference_counts": "vampire/tests/fixtures/reference_corpus/dev.npz",
      "reference_vocabulary": "vampire/tests/fixtures/reference_corpus/dev.vocab.json",
      "bow_embedder": {
          "type": "bag_of_word_counts",
          "vocab_namespace": "vampire",
          "ignore_oov": true
      },
      "vae": {
        "type": "logistic_normal",
        "encoder": {
          "input_dim": 279,
          "num_layers": 2,
          "hidden_dims": [10, 10],
          "activations": ["relu", "relu"]
        },
        "mean_projection": {
          "input_dim": 10,
          "num_layers": 1,
          "hidden_dims": [10],
          "activations": ["linear"]
        },
        "log_variance_projection": {
          "input_dim": 10,
          "num_layers": 1,
          "hidden_dims": [10],
          "activations": ["linear"]
        },
        "decoder": {
          "input_dim": 10,
          "num_layers": 1,
          "hidden_dims": [279],
          "activations": ["tanh"]
        },
        "apply_batchnorm": true,
        "z_dropout": 0.2
      }
    },
    "iterator": {
      "type": "basic",
      "batch_size": 100,
      "track_epoch": true
    },
    "trainer": {
      "validation_metric": "-nll",
      "num_epochs": 5,
      "patience": 5,
      "cuda_device": -1,
      "optimizer": {
        "type": "adam",
        "lr": 0.001,
        "weight_decay": 0.001
      }
    }
  }
    
  