{
    "dataset_reader": {
        "lazy": false,
        "type": "semisupervised_text_classification_json",
        "token_indexers": {
            "tokens": {
                "type": "single_id",
                "namespace": "tokens",
                "lowercase_tokens": true
            },
            "vae_tokens": {
		        "type": "single_id",
                "namespace": "vae",
                "lowercase_tokens": true
		    }
        },
        "ignore_labels": false,
        "max_sequence_length": 400
    },
    "vocabulary":{
        "type": "vocabulary_with_vampire",
        "vampire_vocab_file": "vampire/tests/fixtures/ag/vocabulary/vampire.txt"
    },
"datasets_for_vocab_creation": ["train"],
"train_data_path": "vampire/tests/fixtures/ag/train.jsonl",
"validation_data_path": "vampire/tests/fixtures/ag/dev.jsonl",
    "model": {
        "type": "basic_classifier",
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 10,
                    "trainable": true
                },
                "vae_tokens": {
                    "type": "vampire_token_embedder",
                    "expand_dim": true,
                    "device": -1,
                    "model_archive": "vampire/tests/fixtures/vae/model.tar.gz",
                    "background_frequency": "vampire/tests/fixtures/ag/vampire.bgfreq",
                    "dropout": 0.2
                }
            }
        },
        "seq2seq_encoder": {
            "type": "lstm",
            "num_layers": 1,
            "bidirectional": false,
            "input_size": 20,
            "hidden_size": 16
        },
        "seq2vec_encoder": {
            "type": "bag_of_embeddings",
            "embedding_dim": 16,
            "averaged": true
        },
        "feedforward": {
            "input_dim": 16,
            "num_layers": 1,
            "hidden_dims": 20,
            "activations": "relu",
            "dropout": 0.1
      }
    },
    "data_loader": {
        "num_workers": 1,
        "batch_size": 32,
        "drop_last": false
    },
    "trainer": {
        "optimizer": {
            "type": "adam",
            "lr": 0.0004
        },
        "validation_metric": "+accuracy",
        "num_epochs": 75,
        "grad_norm": 10.0,
        "patience": 5,
        "cuda_device": -1,
        "learning_rate_scheduler": {
            "type": "reduce_on_plateau",
            "factor": 0.5,
            "mode": "max",
            "patience": 0
        }
    }
}

