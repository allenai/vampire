{
    "dataset_reader": {
        "lazy": false,
        "type": "semisupervised_text_classification_json",
        "tokenizer": {
            "word_splitter": "spacy"
        },
        "token_indexers": {
            "tokens": {
                "type": "single_id",
                "namespace": "tokens",
                "lowercase_tokens": true
            },
            "vae_tokens": {
		        "type": "single_id",
                "namespace": "vae",
                "lowercase_tokens": true
		    }
        },
        "ignore_labels": false,
        "max_sequence_length": 400
    },
    "validation_dataset_reader": {
        "lazy": false,
        "type": "semisupervised_text_classification_json",
        "tokenizer": {
            "word_splitter": "spacy"
        },
        "token_indexers": {
            "tokens": {
                "type": "single_id",
                "namespace": "tokens",
                "lowercase_tokens": true
            },
            "vae_tokens": {
		        "type": "single_id",
                "namespace": "vae",
                "lowercase_tokens": true
		    }
        },
        "ignore_labels": false,
        "max_sequence_length": 400
    },
    "vocabulary":{
        "type": "vocabulary_with_vae",
        "vae_vocab_file": "vampire/tests/fixtures/vae/vocabulary/vae.txt"
    },
"datasets_for_vocab_creation": ["train"],
"train_data_path": "vampire/tests/fixtures/imdb/train.jsonl",
"validation_data_path": "vampire/tests/fixtures/imdb/test.jsonl",
    "model": {
        "type": "classifier",
        "input_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 10,
                    "trainable": true
                },
                "vae_tokens": {
                    "type": "vampire_token_embedder",
                    "expand_dim": true,
                    "model_archive": "vampire/tests/fixtures/vae/model.tar.gz",
                    "background_frequency": "vampire/tests/fixtures/vae/vocabulary/vae.bgfreq.json",
                    "dropout": 0.2
                }
            }
        },
        "encoder": {
           "type": "seq2seq",
           "architecture": {
            "type": "lstm",
            "num_layers": 1,
            "bidirectional": false,
            "input_size": 20,
            "hidden_size": 128
           },
           "aggregations": ["maxpool" , "attention"]
        },
        "output_layer": {
            "activations": "relu",
            "dropout": 0.5,
            "hidden_dims": [
                256
            ],
            "input_dim": 256,
            "num_layers": 1
        }
    },
    "iterator": {
        "type": "bucket",
        "sorting_keys": [["tokens", "num_tokens"]],
        "batch_size": 32
    },
    "trainer": {
        "optimizer": {
            "type": "adam",
            "lr": 0.0004
        },
        "validation_metric": "+accuracy",
        "num_serialized_models_to_keep": 2,
        "num_epochs": 75,
        "grad_norm": 10.0,
        "patience": 5,
        "cuda_device": -1,
        "learning_rate_scheduler": {
            "type": "reduce_on_plateau",
            "factor": 0.5,
            "mode": "max",
            "patience": 0
        }
    }
}

